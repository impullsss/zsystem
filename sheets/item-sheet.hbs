<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header" style="display:flex; align-items:center; gap:10px;">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" style="flex:0 0 64px; height:64px; border:1px solid #333;"/>
    <div class="header-fields" style="flex:1;">
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Название"/></h1>
        <div class="grid grid-2col">
            <div class="form-group">
                <label>Вес</label>
                <input type="number" name="system.weight" value="{{system.weight}}" step="0.1"/>
            </div>
            <div class="form-group">
                <label>Кол-во</label>
                <input type="number" name="system.quantity" value="{{system.quantity}}"/>
            </div>
        </div>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="details">Параметры</a>
    <a class="item" data-tab="effects">Эффекты</a>
    <a class="item" data-tab="description">Описание</a>
  </nav>

  <section class="sheet-body">
    
    <!-- TAB: DETAILS -->
    <div class="tab details" data-group="primary" data-tab="details">

        <!-- СЕКЦИЯ ПРОЕКТОВ И ПОСТРОЕК -->
        {{#if (or (eq item.type "upgrade") (eq item.type "project"))}}
        <div class="project-settings">
            <h3>Требования Проекта</h3>
            <div class="grid grid-2col">
                <div class="form-group">
                    <label>Время (Часы)</label>
                    <input type="number" name="system.hoursNeeded" value="{{system.hoursNeeded}}"/>
                </div>
                <div class="form-group">
                    <label>Стоимость (Детали)</label>
                    <input type="number" name="system.partsCost" value="{{system.partsCost}}"/>
                </div>
                <div class="form-group">
                    <label>Мин. Людей</label>
                    <input type="number" name="system.minPeople" value="{{system.minPeople}}"/>
                </div>
                <div class="form-group">
                    <label>Навык</label>
                    <select name="system.reqSkill">
                        {{selectOptions skillsList selected=system.reqSkill localize=false}}
                    </select>
                </div>
                <div class="form-group">
                    <label>Мин. Уровень Навыка</label>
                    <input type="number" name="system.reqLevel" value="{{system.reqLevel}}"/>
                </div>
            </div>
            <div class="form-group">
                <label>Текущий прогресс (Часы)</label>
                <input type="number" name="system.progress" value="{{system.progress}}"/>
            </div>
            <div class="form-group">
                <label>Внесено деталей</label>
                <input type="number" name="system.partsPaid" value="{{system.partsPaid}}"/>
            </div>
            <hr>
            <h3>Эффект при завершении (Ежедневный)</h3>
            <div class="grid grid-2col">
                <div class="form-group">
                    <label>Тип Бонуса</label>
                    <select name="system.bonusType">
                        {{selectOptions bonusTypes selected=system.bonusType localize=false}}
                    </select>
                </div>
                
                <div class="form-group">
                    <label>Значение / Кол-во</label>
                    <input type="number" name="system.bonusValue" value="{{system.bonusValue}}"/>
                </div>

                {{#if (eq system.bonusType "medicine")}}
                <div class="form-group" style="grid-column: span 2;">
                    <label>Создаваемый предмет (название)</label>
                    <input type="text" name="system.outputItem" value="{{system.outputItem}}" placeholder="Например: Бинт"/>
                </div>
                {{/if}}

                <div class="form-group flexrow">
                    <label>Завершено?</label>
                    <input type="checkbox" name="system.isCompleted" {{checked system.isCompleted}}/>
                </div>
            </div>
        </div>
        {{/if}}
        
        <!-- === СЕКЦИЯ ОРУЖИЯ === -->
        {{#if (eq item.type "weapon")}}
        <div class="weapon-properties">
            <div class="grid grid-3col">
                <!-- Тип и Хват -->
                <div class="form-group">
                    <label>Тип</label>
                    <select name="system.weaponType">
                        {{selectOptions weaponTypes selected=system.weaponType localize=false}}
                    </select>
                </div>
                <div class="form-group">
                    <label>Хват</label>
                    <select name="system.hands">
                        {{selectOptions handsOptions selected=system.hands localize=false}}
                    </select>
                </div>
                <div class="form-group">
                    <label>Урон</label>
                    <select name="system.damageType">
                        {{selectOptions damageTypes selected=system.damageType localize=false}}
                    </select>
                </div>
                
                <!-- Параметры -->
                <div class="form-group">
                    <label>Дальность</label>
                    <input type="number" name="system.range" value="{{system.range}}"/>
                </div>
                <div class="form-group">
                    <label>Шум</label>
                    <input type="number" name="system.noise" value="{{system.noise}}" min="0"/>
                </div>
                <div class="form-group">
                    <label>Треб. Силы</label>
                    <input type="number" name="system.strReq" value="{{system.strReq}}"/>
                </div>
                
                <!-- ПАТРОНЫ И МАГАЗИН -->
                <div class="form-group">
    <label>Калибр патронов</label>
    <div class="flexrow" style="gap:5px;">
        <!-- Селект БЕЗ name (чтобы не сохранялся автоматически как ammoType) -->
        <select class="ammo-selector" style="flex:2;">
            {{#select ammoSelectorValue}}
                {{#each ammoCalibres as |label key|}}
                    <option value="{{key}}">{{label}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</div>

{{#if showCustomAmmoInput}}
<div class="form-group" style="background: rgba(0,0,0,0.05); padding: 5px; border: 1px dashed #777;">
    <label>Впишите калибр:</label>
    <input type="text" name="system.ammoType" value="{{system.ammoType}}" placeholder="Напр: .338 Lapua"/>
</div>
{{/if}}

                <div class="form-group"><label>Емкость Маг.</label><input type="number" name="system.mag.max" value="{{system.mag.max}}"/></div>
                <div class="form-group"><label>В стволе</label><input type="number" name="system.mag.value" value="{{system.mag.value}}"/></div>
                <div class="form-group"><label>AP Перезаряд.</label><input type="number" name="system.reloadAP" value="{{system.reloadAP}}"/></div>

                <div class="form-group">
                    <label>Шанс Крита (+%)</label>
                    <input type="number" name="system.critChance" value="{{system.critChance}}" placeholder="0"/>
                </div>
                <div class="form-group">
                    <label>Крит Множитель (x)</label>
                    <input type="number" name="system.critMult" value="{{system.critMult}}" step="0.1" placeholder="1.5"/>
                </div>

                <!-- Прочность -->
                <div class="form-group">
                    <label>Прочность</label>
                    <div class="flexrow">
                        <input type="number" name="system.hp.value" value="{{system.hp.value}}" placeholder="Cur"/>
                        <span>/</span>
                        <input type="number" name="system.hp.max" value="{{system.hp.max}}" placeholder="Max"/>
                    </div>
                </div>
            </div>

            <hr>
            
            <!-- Метательное оружие -->
            <div class="form-group flexrow">
                <label>Метательное?</label>
                <input type="checkbox" name="system.isThrowing" {{checked system.isThrowing}}/>
            </div>
            
            {{#if system.isThrowing}}
            <div class="grid grid-2col" style="background: rgba(255,100,0,0.1); padding: 5px; border-radius: 4px; margin-bottom: 10px;">
                <div class="form-group">
                    <label>Радиус Взрыва (м)</label>
                    <input type="number" name="system.blastRadius" value="{{system.blastRadius}}"/>
                </div>
                <div class="form-group">
                    <label>Форма</label>
                    <select name="system.templateType">
                        <option value="circle" {{#if (eq system.templateType "circle")}}selected{{/if}}>Круг</option>
                        <option value="cone" {{#if (eq system.templateType "cone")}}selected{{/if}}>Конус</option>
                    </select>
                </div>
            </div>
            {{/if}}

            <!-- Секция Атак -->
             <div class="attacks-section">
                <div class="flexrow" style="align-items:center; margin-bottom:5px; gap: 5px;">
                    <h3>Варианты Атаки</h3>
                    
                    {{#if isHybrid}}
                    <a class="generate-hybrid" title="Создать Удар/Бросок" style="font-size:0.8em; background:#333; color:#fff; padding:2px 5px; border-radius:3px;">
                        <i class="fas fa-magic"></i> Авто
                    </a>
                    {{/if}}

                    <a class="attack-create" title="Добавить атаку" style="margin-left:auto;"><i class="fas fa-plus"></i></a>
                </div>
                
                <div class="attacks-table">
    <!-- HEADER -->
    <div class="attack-header flexrow" style="border-bottom:1px solid #777; font-weight:bold; font-size: 0.8em; align-items:center;">
        <div style="flex:1;">Название</div>
        <div style="flex:0.3; text-align:center;">AP</div>
        <div style="flex:0.3; text-align:center;" title="Расход патронов">Пт.</div>
        <div style="flex:0.6; text-align:center;">Урон</div>
        <div style="flex:0.4; text-align:center;">Точн.</div>
        <div style="flex:1.5; text-align:center;">Эффекты (Шанс %)</div>
        <div style="width:30px;"></div>
    </div>
    
    {{#each system.attacks as |attack key|}}
    <div class="attack-row flexrow" style="align-items:flex-start; margin-top:5px; border-bottom:1px dotted #444; padding-bottom:5px;">
        <!-- Основные статы -->
        <div style="flex:1; padding-right:2px;"><input type="text" name="system.attacks.{{key}}.name" value="{{attack.name}}"/></div>
        <div style="flex:0.3; padding-right:2px;"><input type="number" name="system.attacks.{{key}}.ap" value="{{attack.ap}}"/></div>
        <div style="flex:0.3; padding-right:2px;"><input type="number" name="system.attacks.{{key}}.bullets" value="{{#if attack.bullets}}{{attack.bullets}}{{else}}1{{/if}}"/></div>
        <div style="flex:0.6; padding-right:2px;"><input type="text" name="system.attacks.{{key}}.dmg" value="{{attack.dmg}}"/></div>
        <div style="flex:0.4; padding-right:2px;"><input type="number" name="system.attacks.{{key}}.mod" value="{{attack.mod}}"/></div>
        
        <!-- ЭФФЕКТЫ (Список) -->
        <div style="flex:2; display:flex; flex-direction:column; gap:2px;">
            {{#each attack.effects as |eff idx|}}
            <div class="flexrow" style="align-items:center; gap:2px;">
                <select name="system.attacks.{{key}}.effects.{{idx}}.id" style="font-size:0.8em; height:20px; flex:1;">
                    {{selectOptions ../../statusOptions selected=eff.id localize=false}}
                </select>
                <input type="number" name="system.attacks.{{key}}.effects.{{idx}}.chance" value="{{eff.chance}}" placeholder="100%" style="width:40px; height:20px; text-align:center; font-size:0.8em;"/>
                <a class="attack-effect-delete" data-key="{{key}}" data-idx="{{idx}}" style="color:red; font-size:0.8em; cursor:pointer;"><i class="fas fa-times"></i></a>
            </div>
            {{/each}}
            <!-- Кнопка добавить эффект -->
            <a class="attack-effect-add" data-key="{{key}}" style="font-size:0.7em; color:green; cursor:pointer; text-align:center; border:1px dashed green; border-radius:3px;">
                <i class="fas fa-plus"></i> Эффект
            </a>
        </div>

        <!-- Удалить атаку -->
        <div style="width:30px; text-align:right; padding-top:2px;">
            <a class="attack-delete" data-key="{{key}}" title="Удалить атаку"><i class="fas fa-trash"></i></a>
        </div>
    </div>
    {{/each}}
</div>
            </div>
        </div>
        {{/if}}

        <!-- ПЕРКИ / ЧЕРТЫ -->
        {{#if (eq item.type "perk")}}
        <div class="perk-properties" style="background: rgba(0,0,0,0.05); padding: 10px; border: 1px solid #777; border-radius: 4px;">
            <h3 style="margin-top:0; border-bottom:1px solid #555;">Настройки Перка</h3>
            
            <div class="grid grid-2col">
                <!-- ВЫБОР ТИПА ПЕРКА -->
                <div class="form-group">
                    <label>Тип (Subtype)</label>
                    <select name="system.subtype">
                        <option value="general" {{#if (eq system.subtype "general")}}selected{{/if}}>Общий</option>
                        <option value="skill" {{#if (eq system.subtype "skill")}}selected{{/if}}>Мастерство</option>
                        <option value="background" {{#if (eq system.subtype "background")}}selected{{/if}}>Предыстория</option>
                    </select>
                </div>

                <!-- КЛЮЧ ПРОГРАММНОЙ ЛОГИКИ (ВОТ ОН!) -->
                <div class="grid grid-2col">
    <div class="form-group">
        <label style="color: #0d47a1; font-weight: bold;">Ключ логики (ID)</label>
        <input type="text" name="system.logicKey" value="{{system.logicKey}}" placeholder="Напр: runner"/>
    </div>
    <div class="form-group">
        <label style="color: #2e7d32; font-weight: bold;">Значение (Value)</label>
        <input type="number" name="system.logicValue" value="{{system.logicValue}}" placeholder="Напр: 4"/>
    </div>
</div>
<p class="notes" style="font-size: 0.8em; margin-top: -5px; margin-bottom: 10px;">
    <i>Runner: значение = каждый какой шаг бесплатен. Butcher: значение = бонус к урону.</i>
</p>
            </div>

            <!-- СТОИМОСТЬ -->
            <div class="grid grid-2col">
                <div class="form-group">
                    <label>Стоимость (PP)</label>
                    <input type="number" name="system.xpCost" value="{{system.xpCost}}" placeholder="1"/>
                </div>
            </div>

            <!-- КОНСТРУКТОР ТРЕБОВАНИЙ -->
            <div class="form-group" style="border-top:1px dashed #777; margin-top:10px; padding-top:5px;">
                <label>Требования (Заполняется автоматически)</label>
                <a class="req-add" style="float:right; font-size:0.8em; color:green; cursor:pointer;">
                    <i class="fas fa-plus-circle"></i> Добавить условие
                </a>
                
                <div class="req-list" style="margin-top:5px;">
                    {{#each reqList as |req idx|}}
                    <div class="flexrow" style="align-items:center; margin-bottom:2px;">
                        <select class="req-change" data-idx="{{idx}}" data-field="key" style="flex:2; margin-right:5px;">
                            {{selectOptions ../reqOptions selected=req.key localize=false}}
                        </select>
                        <input type="number" class="req-change" data-idx="{{idx}}" data-field="val" value="{{req.val}}" style="flex:1; text-align:center;"/>
                        <a class="req-delete" data-idx="{{idx}}" style="color:red; margin-left:5px; cursor:pointer;"><i class="fas fa-times"></i></a>
                    </div>
                    {{/each}}
                    {{#unless reqList}}
                    <div style="font-size:0.8em; color:#777; font-style:italic;">Нет требований.</div>
                    {{/unless}}
                </div>
                <input type="text" name="system.requirements" value="{{system.requirements}}" style="display:none;"/>
            </div>
        </div>
        {{/if}}

        <!-- ПАТРОНЫ -->
        {{#if (eq item.type "ammo")}}
        <div class="ammo-properties">
            <div class="form-group">
                <label>Калибр</label>
                <input type="text" name="system.calibre" value="{{system.calibre}}" placeholder="Напр: 9mm"/>
            </div>
        </div>
        {{/if}}
        
        <!-- ЕДА -->
        {{#if (eq item.type "food")}}
        <div class="food-properties" style="background: rgba(0,255,0,0.05); padding: 5px; border-radius: 4px; border: 1px solid #777;">
            <h3>Склад Убежища</h3>
            <div class="form-group">
                <label>Очков Провизии (Resource Value)</label>
                <input type="number" name="system.resourceValue" value="{{system.resourceValue}}" placeholder="Напр: 1"/>
                <p class="notes" style="font-size: 0.8em; color: #888; margin-top: 2px;">
                    Вклад в общий запас еды при сдаче на склад. (Потребление: 3/чел в день)
                </p>
            </div>
        </div>
        {{/if}}

        <!-- МЕДИЦИНА -->
        {{#if (eq item.type "medicine")}}
        <div class="medicine-properties">
             <div class="grid grid-2col">
                <div class="form-group">
                    <label>Сила Лечения</label>
                    <input type="number" name="system.healAmount" value="{{system.healAmount}}"/>
                </div>
                <div class="form-group flexrow">
                    <label>Это Антибиотик?</label>
                    <input type="checkbox" name="system.isAntibiotic" {{checked system.isAntibiotic}}/>
                </div>
             </div>
        </div>
        {{/if}}

        <!-- БРОНЯ -->
        {{#if (eq item.type "armor")}}
        <div class="armor-properties">
            <div class="form-group">
                <label style="font-weight: bold; font-size: 1.1em;">AC (Класс Защиты)</label>
                <input type="number" name="system.ac" value="{{system.ac}}" style="background: rgba(0,0,0,0.1); font-weight: bold;"/>
                <p class="notes" style="font-size: 0.8em; color: #666;">Влияет на шанс попадания по вам.</p>
            </div>

            <hr>
            
            <h3>Сопротивление урону (DR %)</h3>
            <div class="dr-table" style="background: rgba(0,0,0,0.05); padding: 8px; border: 1px solid #777; border-radius: 4px; margin-bottom: 10px;">
                <div class="grid grid-2col" style="gap: 10px;">
                    <div class="form-group">
                        <label><i class="fas fa-hammer"></i> Дробящий</label>
                        <input type="number" name="system.dr.blunt" value="{{system.dr.blunt}}" placeholder="0%"/>
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-fencer"></i> Режущий</label>
                        <input type="number" name="system.dr.slashing" value="{{system.dr.slashing}}" placeholder="0%"/>
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-bullseye"></i> Колющий</label>
                        <input type="number" name="system.dr.piercing" value="{{system.dr.piercing}}" placeholder="0%"/>
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-crosshairs"></i> Пулевой</label>
                        <input type="number" name="system.dr.ballistic" value="{{system.dr.ballistic}}" placeholder="0%"/>
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-fire"></i> Огненный</label>
                        <input type="number" name="system.dr.fire" value="{{system.dr.fire}}" placeholder="0%"/>
                    </div>
                </div>
            </div>

            <hr>

            <div class="coverage-table" style="margin-top:10px;">
                <label style="font-weight:bold; display: block; border-bottom: 1px solid #5d4037; margin-bottom: 5px;">Зоны покрытия (Coverage):</label>
                <div class="grid grid-3col" style="font-size: 0.9em; background: rgba(255,255,255,0.3); padding: 5px; border-radius: 4px;">
                    <label class="flexrow" style="align-items: center;"><input type="checkbox" name="system.coverage.head" {{checked system.coverage.head}}/> Голова</label>
                    <label class="flexrow" style="align-items: center;"><input type="checkbox" name="system.coverage.torso" {{checked system.coverage.torso}}/> Торс</label>
                    <label class="flexrow" style="align-items: center;"><input type="checkbox" name="system.coverage.lArm" {{checked system.coverage.lArm}}/> Л. Рука</label>
                    <label class="flexrow" style="align-items: center;"><input type="checkbox" name="system.coverage.rArm" {{checked system.coverage.rArm}}/> П. Рука</label>
                    <label class="flexrow" style="align-items: center;"><input type="checkbox" name="system.coverage.lLeg" {{checked system.coverage.lLeg}}/> Л. Нога</label>
                    <label class="flexrow" style="align-items: center;"><input type="checkbox" name="system.coverage.rLeg" {{checked system.coverage.rLeg}}/> П. Нога</label>
                </div>
                <p class="notes" style="font-size: 0.75em; font-style: italic; color: #555; margin-top: 3px;">Armor AC and DR will only apply if the target limb is covered.</p>
            </div>
        </div>
        {{/if}}

        {{!-- Выбор Категории (всегда виден для предметов, которые не оружие/броня/перк) --}}
    {{#if isCategoryEditable}}
    <div class="form-group" style="margin-top: 10px; background: rgba(0,0,0,0.1); padding: 5px; border-radius: 4px;">
        <label>Категория предмета</label>
        <select name="system.category">
            {{selectOptions categoryOptions selected=system.category localize=false}}
        </select>
    </div>
    {{/if}}

    {{!-- Динамические поля на основе категории --}}
    
    {{!-- Секция ЕДЫ --}}
    {{#if (eq system.category "food")}}
    <div class="resource-logic-box" style="background: rgba(0,255,0,0.05); border: 1px solid #2e7d32; padding: 10px; margin-top: 5px;">
        <h3>Параметры Еды</h3>
        <div class="form-group">
            <label>Очки провизии (Provision Points)</label>
            <input type="number" name="system.resourceValue" value="{{system.resourceValue}}"/>
        </div>
        <p class="notes" style="font-size: 0.8em; color: #555;"><i>Каждое очко пополнит запас еды в Убежище при сдаче.</i></p>
    </div>
    {{/if}}

    {{!-- Секция МАТЕРИАЛОВ (ДЕТАЛЕЙ) --}}
    {{#if (eq system.category "materials")}}
    <div class="resource-logic-box" style="background: rgba(255,150,0,0.05); border: 1px solid #ef6c00; padding: 10px; margin-top: 5px;">
        <h3>Параметры Ресурсов</h3>
        <div class="form-group">
            <label>Ценность в деталях (Parts Value)</label>
            <input type="number" name="system.resourceValue" value="{{system.resourceValue}}"/>
        </div>
        <p class="notes" style="font-size: 0.8em; color: #555;"><i>Это количество Запчастей (Parts), которое вы получите за утилизацию 1 ед. предмета.</i></p>
    </div>
    {{/if}}
    {{!-- Секция ТОПЛИВА --}}
    {{#if (eq system.category "fuel")}}
    <div class="resource-logic-box" style="background: rgba(183,28,28,0.05); border: 1px solid #b71c1c; padding: 10px; margin-top: 5px;">
        <h3>Параметры Горючего</h3>
        <div class="form-group">
            <label>Объем топлива (Fuel Units)</label>
            <input type="number" name="system.resourceValue" value="{{system.resourceValue}}"/>
        </div>
        <p class="notes" style="font-size: 0.8em; color: #555;"><i>Единицы топлива для заправки машины или генератора.</i></p>
    </div>
    {{/if}}
    {{!-- Секция РОСКОШИ (Luxury) --}}
{{#if (eq system.category "luxury")}}
<div class="resource-logic-box" style="background: rgba(3, 169, 244, 0.05); border: 1px solid #03a9f4; padding: 10px; margin-top: 5px;">
    <h3>Роскошь (Бонус Морали)</h3>
    <div class="form-group">
        <label>Вклад в Мораль (Points)</label>
        <input type="number" name="system.resourceValue" value="{{system.resourceValue}}"/>
    </div>
    <p class="notes" style="font-size: 0.8em; color: #555;"><i>Порадует выживших при сдаче на склад.</i></p>
</div>
{{/if}}

    </div>

    <!-- TAB: DESCRIPTION -->
    <div class="tab description" data-group="primary" data-tab="description">
        <textarea name="system.description">{{system.description}}</textarea>
    </div>

    <!-- TAB: EFFECTS -->
<div class="tab effects" data-group="primary" data-tab="effects">
    <div class="perk-bonuses-section" style="background: rgba(0,0,0,0.05); padding: 10px; border-radius: 4px; border: 1px solid #777;">
        <h3 style="margin-top:0; border-bottom: 2px solid #5d4037; display:flex; justify-content:space-between; align-items:center;">
            Пассивные Бонусы
            <a class="perk-bonus-add" title="Добавить бонус" style="font-size:0.7em; color:green; cursor:pointer;"><i class="fas fa-plus-circle"></i> Добавить</a>
        </h3>

        <div class="perk-bonuses-list">
            {{#each perkBonuses as |bonus idx|}}
            <div class="flexrow perk-bonus-row" style="margin-bottom:5px; align-items:center; gap:5px;">
                
                <!-- ВЫБОР ПАРАМЕТРА -->
                <select class="perk-bonus-change" data-idx="{{idx}}" data-field="key" style="flex:3;">
                    {{#select bonus.key}}
                        {{#each ../bonusOptions as |label key|}}
                        <option value="{{key}}">{{label}}</option>
                        {{/each}}
                    {{/select}}
                </select>

                <!-- ЗНАЧЕНИЕ БОНУСА -->
                <input type="number" class="perk-bonus-change" data-idx="{{idx}}" data-field="value" 
                       value="{{bonus.value}}" style="flex:1; text-align:center; font-weight:bold;"/>

                <!-- УДАЛИТЬ -->
                <a class="perk-bonus-delete" data-idx="{{idx}}" style="color:red; flex:0 0 20px; text-align:center; cursor:pointer;">
                    <i class="fas fa-times"></i>
                </a>
            </div>
            {{/each}}

            {{#unless perkBonuses}}
                <div style="text-align:center; color:#666; font-style:italic; padding:10px;">Этот перк не дает числовых бонусов.</div>
            {{/unless}}
        </div>
        
        <p class="notes" style="margin-top:10px; font-size:0.8em; color:#666;">
            <i class="fas fa-info-circle"></i> Эти бонусы применяются автоматически, когда предмет находится у персонажа.
        </p>
    </div>
</div>

  </section>
</form>