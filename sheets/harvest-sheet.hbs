<form class="{{cssClass}}" autocomplete="off">
    <!-- HEADER -->
    <header class="sheet-header">
        <img class="profile-img-box" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
        <div style="flex:1;">
            <!-- Если не ГМ, поле заблокировано -->
            <input class="charname-input" name="name" type="text" value="{{actor.name}}" placeholder="Название точки" {{#unless isGM}}disabled style="cursor: default;"{{/unless}}/>
        </div>
    </header>

    <!-- === ПАНЕЛЬ МАСТЕРА (Фиксированная) === -->
    {{#if isGM}}
    <div class="gm-panel" style="margin: 5px; background: #e8f5e9; border: 1px dashed #4caf50; padding: 5px;">
        <div style="font-weight: bold; color: #2e7d32; border-bottom: 1px solid #a5d6a7; margin-bottom: 5px; display:flex; justify-content:space-between;">
            <span><i class="fas fa-tools"></i> Настройки GM</span>
            <a class="reset-btn" title="Сбросить состояние" style="cursor:pointer; color:#d84315;"><i class="fas fa-undo"></i> Сброс</a>
        </div>
        
        <div class="grid grid-2col" style="gap: 5px; align-items: center;">
            <div class="form-group">
                <label style="font-size: 0.8em; font-weight:bold;">Навык:</label>
                <select name="flags.zsystem.reqSkill" style="width: 100%; font-size: 0.9em;">
                    {{selectOptions skillsList selected=actor.flags.zsystem.reqSkill localize=false}}
                </select>
            </div>
            <div class="form-group">
                <label style="font-size: 0.8em; font-weight:bold;">Сложность (DC):</label>
                <input type="number" name="flags.zsystem.difficulty" value="{{actor.flags.zsystem.difficulty}}" placeholder="10" style="text-align:center;"/>
            </div>
        </div>

        <div style="margin-top: 5px;">
             <textarea class="harvest-desc-input" rows="2" placeholder="Скрытое описание для игроков..." style="width: 100%; font-size: 0.8em;">{{description}}</textarea>
        </div>
    </div>
    {{/if}}

    <div class="sheet-body" style="padding: 10px; overflow-y: auto; height: 100%;">

        <!-- ОПИСАНИЕ (Видят все, кроме GM, у GM оно в поле ввода) -->
        {{#if (and description (not isGM))}}
        <div class="harvest-description-box">
            "{{description}}"
        </div>
        {{/if}}

        <!-- === ЛОГИКА ОТОБРАЖЕНИЯ === -->
        
        {{#if isBroken}}
            <!-- 1. СЛОМАНО -->
            <div class="harvest-locked-view" style="border-color: #ef5350; background: #ffebee;">
                <i class="fas fa-times-circle" style="font-size: 48px; color: #c62828;"></i>
                <h2 style="color: #c62828;">СЛОМАНО / ПУСТО</h2>
            </div>

        {{else}}
            {{#if isHarvested}}
                <!-- 2. ОТКРЫТО (Успех) -->
                <div class="section-header">
                    <span><i class="fas fa-box-open"></i> Содержимое</span>
                    <!-- Кнопка добавления доступна GM даже здесь -->
                    {{#if isGM}}<a class="item-create" title="Добавить"><i class="fas fa-plus-circle"></i></a>{{/if}}
                </div>
                
                <ol class="light-item-list">
                    {{#each inventory.items as |item|}}
                    <li class="light-item" data-item-id="{{item.id}}">
                        <img src="{{item.img}}" width="24" height="24"/>
                        <span class="item-name">{{item.name}}</span>
                        <span class="item-qty">x{{item.system.quantity}}</span>
                        <div class="item-controls">
                            <a class="item-edit"><i class="fas fa-edit"></i></a>
                            <a class="item-delete"><i class="fas fa-trash"></i></a>
                        </div>
                    </li>
                    {{/each}}
                    {{#unless inventory.items}}
                        <li style="text-align: center; color: #777; padding: 10px;">Пусто...</li>
                    {{/unless}}
                </ol>

            {{else}}
                <!-- 3. ЗАКРЫТО (Требуется проверка) -->
                <div class="harvest-locked-view">
                    <i class="fas fa-lock" style="font-size: 48px; color: #555;"></i>
                    
                    <div class="requirement-box">
                        <div style="font-size: 0.8em; color: #666;">ТРЕБУЕТСЯ НАВЫК</div>
                        <div style="font-size: 1.2em; font-weight: bold; text-transform: uppercase; color: #222;">
                            {{actor.flags.zsystem.reqSkill}}
                        </div>
                    </div>

                    <button type="button" class="harvest-btn" {{#unless canHarvest}}disabled{{/unless}}>
                        {{#if canHarvest}}
                            <i class="fas fa-tools"></i> ПОПРОБОВАТЬ СОБРАТЬ
                        {{else}}
                            <i class="fas fa-ban"></i> {{distanceMsg}}
                        {{/if}}
                    </button>
                    
                    {{#unless canHarvest}}
                    <div class="status-msg error">
                        ВЫБЕРИТЕ ТОКЕН И ПОДОЙДИТЕ БЛИЖЕ!
                    </div>
                    {{/unless}}
                </div>
                
                <!-- GM PREVIEW (ГМ видит лут и кнопку добавления СНИЗУ) -->
                {{#if isGM}}
                <div style="margin-top: 20px; border-top: 2px dashed #999; padding-top: 10px; background: rgba(0,0,0,0.02);">
                    <div style="font-weight: bold; color: #555; text-align: center; margin-bottom: 5px;">
                        [GM: Лут внутри]
                        <a class="item-create" title="Добавить" style="margin-left:5px; color:#2e7d32; cursor:pointer;"><i class="fas fa-plus-circle"></i></a>
                    </div>
                    <ol class="light-item-list">
                        {{#each inventory.items as |item|}}
                        <li class="light-item" data-item-id="{{item.id}}">
                            <img src="{{item.img}}" width="20" height="20"/>
                            <span class="item-name">{{item.name}}</span>
                            <span class="item-qty">x{{item.system.quantity}}</span>
                            <div class="item-controls">
                                <a class="item-edit"><i class="fas fa-edit"></i></a>
                                <a class="item-delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        {{/each}}
                         {{#unless inventory.items}}
                            <li style="text-align: center; color: #aaa; font-size:0.9em;">(Пусто)</li>
                        {{/unless}}
                    </ol>
                </div>
                {{/if}}

            {{/if}}
        {{/if}}
    </div>
</form>