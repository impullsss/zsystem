<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img-box" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
        <div style="flex:1;">
            <input class="charname-input" name="name" type="text" value="{{actor.name}}" placeholder="Название"/>
        </div>
    </header>

    <div class="sheet-body" style="padding: 10px; overflow-y: auto;">
        
        <div class="section-header">
            <span><i class="fas fa-box-open"></i> Содержимое</span>
            {{#if isGM}}
            <a class="item-create" data-type="misc" title="Добавить"><i class="fas fa-plus-circle"></i></a>
            {{/if}}
        </div>

        <ol class="light-item-list">
            {{#each inventory as |section key|}}
                {{#if section.items.length}}
                    <!-- Подзаголовок категории (Опционально, можно убрать если мешает) -->
                    <li style="font-size:0.8em; color:#777; margin-top:5px; border-bottom:1px solid #ccc;">{{section.label}}</li>
                    
                    {{#each section.items as |item id|}}
                        <li class="light-item" data-item-id="{{item.id}}">
                            <img src="{{item.img}}" width="24" height="24"/>
                            <div class="item-name">{{item.name}}</div>
                            <div class="item-qty">x{{item.system.quantity}}</div>
                            <div class="item-controls">
                                <a class="item-edit"><i class="fas fa-edit"></i></a>
                                <a class="item-delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                    {{/each}}
                {{/if}}
            {{/each}}
        </ol>

        <!-- Пустой список -->
        {{#unless actor.items.size}}
            <div style="text-align:center; padding:20px; color:#999; font-style:italic;">
                Контейнер пуст
            </div>
        {{/unless}}
    </div>
</form>