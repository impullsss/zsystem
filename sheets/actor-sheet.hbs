<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      
      <div class="resources grid grid-4col">
        <!-- HP -->
        <div class="resource">
          <label class="resource-label">Здоровье (HP)</label>
          <div class="resource-content">
            <input type="number" name="system.resources.hp.value" value="{{system.resources.hp.value}}"/>
            <span> / </span>
            <input type="number" name="system.resources.hp.max" value="{{system.resources.hp.max}}" disabled/>
          </div>
        </div>
        <!-- AP -->
        <div class="resource">
          <label class="resource-label">ОД (AP)</label>
          <div class="resource-content">
            <input type="number" name="system.resources.ap.value" value="{{system.resources.ap.value}}"/>
            <span> / </span>
            <input type="number" name="system.resources.ap.max" value="{{system.resources.ap.max}}" disabled/>
             <a class="ap-reset" title="Восстановить AP"><i class="fas fa-sync"></i></a>
          </div>
        </div>
        <!-- Morale -->
        <div class="resource">
          <label class="resource-label">Мораль</label>
          <div class="resource-content">
            <input type="number" name="system.resources.morale.value" value="{{system.resources.morale.value}}"/>
          </div>
        </div>
        <!-- Reputation -->
        <div class="resource">
          <label class="resource-label">Репутация</label>
          <div class="resource-content">
             <input type="number" name="system.resources.reputation.value" value="{{system.resources.reputation.value}}"/>
          </div>
        </div>
      </div>
    </div>
    <!-- Вставь это, например, перед вкладками или в первой вкладке "Атрибуты" -->
<div class="body-chart-container">
    <svg class="body-chart" viewBox="0 0 200 300" xmlns="http://www.w3.org/2000/svg">
        <!-- Силуэт (упрощенный) -->
        <g class="limb-zone" data-limb="head">
            <circle cx="100" cy="30" r="25" class="limb-shape" />
            <text x="100" y="35" text-anchor="middle" class="limb-label">HEAD</text>
        </g>
        
        <g class="limb-zone" data-limb="lArm">
            <rect x="30" y="60" width="35" height="100" rx="10" class="limb-shape" />
            <text x="47" y="110" text-anchor="middle" class="limb-label">L.ARM</text>
        </g>

        <g class="limb-zone" data-limb="rArm">
            <rect x="135" y="60" width="35" height="100" rx="10" class="limb-shape" />
            <text x="152" y="110" text-anchor="middle" class="limb-label">R.ARM</text>
        </g>

        <g class="limb-zone" data-limb="torso">
            <rect x="70" y="60" width="60" height="110" rx="5" class="limb-shape" />
            <text x="100" y="115" text-anchor="middle" class="limb-label">TORSO</text>
        </g>

        <g class="limb-zone" data-limb="lLeg">
            <rect x="70" y="175" width="28" height="120" rx="5" class="limb-shape" />
            <text x="84" y="240" text-anchor="middle" class="limb-label">L.LEG</text>
        </g>

        <g class="limb-zone" data-limb="rLeg">
            <rect x="102" y="175" width="28" height="120" rx="5" class="limb-shape" />
            <text x="116" y="240" text-anchor="middle" class="limb-label">R.LEG</text>
        </g>
    </svg>

    <!-- Inputs overlay (абсолютное позиционирование поверх SVG для ввода цифр) -->
    <!-- HEAD -->
    <div class="limb-input" style="top: 20px; left: 85px;">
        <input type="number" name="system.limbs.head.value" value="{{system.limbs.head.value}}">
        <span>/ {{system.limbs.head.max}}</span>
    </div>
    <!-- TORSO -->
    <div class="limb-input" style="top: 100px; left: 85px;">
        <input type="number" name="system.limbs.torso.value" value="{{system.limbs.torso.value}}">
        <span>/ {{system.limbs.torso.max}}</span>
    </div>
    <!-- L ARM -->
    <div class="limb-input" style="top: 100px; left: 25px;">
        <input type="number" name="system.limbs.lArm.value" value="{{system.limbs.lArm.value}}">
        <span>/ {{system.limbs.lArm.max}}</span>
    </div>
    <!-- R ARM -->
    <div class="limb-input" style="top: 100px; left: 145px;">
        <input type="number" name="system.limbs.rArm.value" value="{{system.limbs.rArm.value}}">
        <span>/ {{system.limbs.rArm.max}}</span>
    </div>
    <!-- L LEG -->
    <div class="limb-input" style="top: 230px; left: 65px;">
        <input type="number" name="system.limbs.lLeg.value" value="{{system.limbs.lLeg.value}}">
        <span>/ {{system.limbs.lLeg.max}}</span>
    </div>
    <!-- R LEG -->
    <div class="limb-input" style="top: 230px; left: 115px;">
        <input type="number" name="system.limbs.rLeg.value" value="{{system.limbs.rLeg.value}}">
        <span>/ {{system.limbs.rLeg.max}}</span>
    </div>
</div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="attributes">Атрибуты</a>
    <a class="item" data-tab="inventory">Инвентарь</a>
    <a class="item" data-tab="effects">Эффекты</a>
  </nav>

  <section class="sheet-body">
    
    <!-- TAB: ATTRIBUTES -->
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      <div class="grid grid-2col">
        <div class="stats-panel">
          <h3>Характеристики (1-10)</h3>
          {{#each system.attributes as |attr key|}}
          <div class="stat-row flexrow">
            <label style="text-transform:uppercase;">{{key}}</label>
            <input type="number" name="system.attributes.{{key}}.value" value="{{attr.value}}" min="1" max="10"/>
          </div>
          {{/each}}

          <hr>
          <h3>Вторичные</h3>
          <div class="stat-row flexrow"><label>Храбрость</label> <span class="value-box">{{system.secondary.bravery.value}}</span></div>
          <div class="stat-row flexrow"><label>Стойкость</label> <span class="value-box">{{system.secondary.tenacity.value}}</span></div>
          <div class="stat-row flexrow"><label>Уклонение</label> <span class="value-box">{{system.secondary.evasion.value}}</span></div>
          <div class="stat-row flexrow"><label>Вес (кг)</label> <span class="value-box">{{system.secondary.carryWeight.value}} / {{system.secondary.carryWeight.max}}</span></div>
          <div class="stat-row flexrow"><label>Очки Обучения</label> <span class="value-box">{{system.resources.learningPoints.value}}</span></div>
        </div>

        <div class="skills-panel">
          <h3>Навыки</h3>
          <div class="flexrow header" style="font-weight:bold; border-bottom:1px solid #555; padding-bottom:5px;">
            <span style="flex:2;">Название</span>
            <span style="flex:1; text-align:center;">База</span>
            <span style="flex:1; text-align:center;">Очки</span>
            <span style="flex:1; text-align:center;">Итог</span>
            <span style="flex:0.5;"></span>
          </div>
          
          <ul class="skills-list">
            {{#each system.skills}}
            <li class="skill-row flexrow" data-skill="{{@key}}" style="align-items:center; margin-bottom:5px; border-bottom:1px solid #eee;">
              <span class="skill-name" style="flex:2; text-transform:capitalize;">{{@key}}</span>
              <span class="skill-base" style="flex:1; text-align:center; color:#666;">{{this.base}}</span>
              <input class="skill-points" type="number" name="system.skills.{{@key}}.points" value="{{this.points}}" style="flex:1; text-align:center; max-width:60px;"/>
              <span class="skill-total" style="flex:1; text-align:center; font-weight:bold;">{{this.value}}</span>
              <a class="skill-roll" style="flex:0.5; text-align:right;" title="Бросок"><i class="fas fa-dice-d20"></i></a>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <!-- TAB: INVENTORY -->
    <div class="tab inventory" data-group="primary" data-tab="inventory">
      <div class="inventory-controls flexrow" style="margin-bottom:10px;">
        <a class="item-create" data-type="weapon"><i class="fas fa-plus"></i> Оружие</a>
        <a class="item-create" data-type="armor"><i class="fas fa-plus"></i> Броня</a>
        <a class="item-create" data-type="medicine"><i class="fas fa-plus"></i> Медицина</a>
        <a class="item-create" data-type="food"><i class="fas fa-plus"></i> Еда</a>
        <a class="item-create" data-type="misc"><i class="fas fa-plus"></i> Разное</a>
      </div>
      <ol class="items-list">
        {{#each inventory as |section key|}}
          <li class="item-header flexrow" style="background:#ddd; padding:5px; font-weight:bold;">
            <h3 style="margin:0;">{{section.label}}</h3>
            <div style="text-align:center; width:50px;">Вес</div>
            <div style="text-align:center; width:50px;">Кол.</div>
            <div style="width:60px;"></div>
          </li>
          <ol class="item-list">
          {{#each section.items as |item|}}
            <li class="item flexrow" data-item-id="{{item.id}}" style="padding:5px; border-bottom:1px solid #eee;">
              <div class="item-image" style="margin-right:5px;"><img src="{{item.img}}" width="24" height="24"/></div>
              <h4 class="item-name item-edit clickable" style="margin:0;">{{item.name}}</h4>
              <div style="text-align:center; width:50px;">{{item.system.weight}}</div>
              <div style="text-align:center; width:50px;">{{item.system.quantity}}</div>
              <div class="item-controls" style="width:60px; text-align:right;">
                {{#if (eq item.type "weapon")}}<a class="item-roll"><i class="fas fa-dice-d20"></i></a>{{/if}}
                <a class="item-edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
          {{/each}}
          </ol>
        {{/each}}
      </ol>
    </div>

    <!-- TAB: EFFECTS (ИСПРАВЛЕНО) -->
    <div class="tab effects" data-group="primary" data-tab="effects">
      <div class="effects-header flexrow" style="margin-bottom:10px;">
         <h3>Активные Эффекты</h3>
         <a class="effect-control" data-action="create" title="Создать новый"><i class="fas fa-plus"></i></a>
      </div>
      <ul class="effects-list" style="list-style:none; padding:0;">
        {{#each effects as |effect|}}
        <li class="effect-item flexrow" data-effect-id="{{effect.id}}" style="padding:5px; border-bottom:1px solid #ccc; align-items:center;">
            <!-- Image (Icon) -->
            <img src="{{effect.img}}" width="24" height="24" style="margin-right:10px;"/>
            
            <!-- Name -->
            <div style="flex:1; font-weight:bold;">{{effect.name}}</div>
            
            <!-- Controls -->
            <div class="effect-controls" style="display:flex; gap:10px;">
              <a class="effect-control" data-action="toggle" title="{{#if effect.disabled}}Включить{{else}}Выключить{{/if}}">
                <i class="fas {{#if effect.disabled}}fa-toggle-off{{else}}fa-toggle-on{{/if}}"></i>
              </a>
              <a class="effect-control" data-action="edit" title="Редактировать">
                <i class="fas fa-edit"></i>
              </a>
              <a class="effect-control" data-action="delete" title="Удалить">
                <i class="fas fa-trash"></i>
              </a>
            </div>
        </li>
        {{else}}
         <li style="padding:5px; color:grey; text-align:center;">Нет активных эффектов</li>
        {{/each}}
      </ul>
    </div>

  </section>
</form>